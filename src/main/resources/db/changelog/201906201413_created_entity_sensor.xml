<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="01" author="ntduoc">
        <createTable tableName="sensor_entity">
            <column name="id" type="varchar(36)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="type_sensor_id" type="bigint">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="created_at" type="datetime">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="updated_at" type="datetime">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="enabled" type="BOOLEAN">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseColumnNames="user_id" baseTableName="sensor_entity"
                constraintName="fk_user_id_sensor_entity" deferrable="true"
                initiallyDeferred="true" onDelete="CASCADE" onUpdate="RESTRICT"
                referencedColumnNames="id" referencedTableName="user_entity"/>
        <addForeignKeyConstraint
                baseColumnNames="type_sensor_id" baseTableName="sensor_entity"
                constraintName="fk_type_sensor_id_sensor_entity" deferrable="true"
                initiallyDeferred="true" onDelete="CASCADE" onUpdate="RESTRICT"
                referencedColumnNames="id" referencedTableName="type_sensor_entity"/>
    </changeSet>
    <changeSet id="load_data_sensor_entity" author="ntduoc">
        <loadData
                catalogName="cat"
                file="db/changelog/csv/201906201413_created_entity_sensor.csv"
                tableName="sensor_entity">
            <column name="id" type="string"/>
            <column name="type_sensor_id" type="numeric"/>
            <column name="user_id" type="numeric"/>
            <column name="enabled" type="BOOLEAN"/>
            <column name="created_at" type="datetime"/>
            <column name="updated_at" type="datetime"/>
        </loadData>
    </changeSet>
</databaseChangeLog>